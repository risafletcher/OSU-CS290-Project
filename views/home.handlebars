<header>
    <h1>Company Name</h1>
</header>
<section>
    <div class="promo-container">
        <h3>Promotional Products</h3>
        <div class="carousel">
            <button class="carousel__left-arrow"><</button>
            <div class="carousel__body">
                {{#each products}}
                <div>
                    <a href="/product?id={{this.id}}">
                        <img src="{{this.promoImage}}" alt="{{this.alt}}" class="carousel__img"/>
                    </a>
                </div>
                {{/each}}
            </div>
            <button class="carousel__right-arrow">></button>
        </div>
    </div>
</section>

